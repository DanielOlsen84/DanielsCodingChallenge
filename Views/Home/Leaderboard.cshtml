            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                
                @Html.DisplayFor(modelItem => item.UserName)
                
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Score)
                
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success active" role="progressbar" aria-valuenow=@item.Percent aria-valuemin="0" aria-valuemax="100" style="width: @item.Percent%"></div>
                </div>
            </td>
            
            </tr>
}
    </tbody>
