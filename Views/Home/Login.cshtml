@{
}

<h1>Login</h1>
<br />
<br />

<div>
    <h2>Here you can login or register a new account.</h2>
</div>
<br /><br /><br />

<div class="loginFormContainer">
    <div class="loginForm">
        <h3>Login</h3>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="loginFormText" for="username">Username</label>
            <input asp-for="Username" type="text" class="form-control" placeholder="Username"/>
            <span asp-validation-for="Username" class="text-danger"></span>
            
            <label class="loginFormText" for="password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <input type="submit" class="btn btn-outline-light" value="Login!" />
        </form>
    </div>

    <br /><br /><br />

    <div class="loginForm">
        <h3>Register new account</h3>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="loginFormText" for="username">Username</label>
            <input asp-for="Username" type="text" class="form-control" placeholder="Username"/>
            <span asp-validation-for="Username" class="text-danger"></span>
            
            <label class="loginFormText" for="password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <input type="submit" class="btn btn-outline-light" value="Register!" />
        </form>
    </div>
</div>