@model DanielsCodingChallenge.Models.UserModel

<h2>@ViewBag.Message</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Challenges
            </th>
            <th>
                Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i <= Model.Score; i++) {
            <tr>
            <td>
               
                @Html.ActionLink("Challenge " + (@i + 1), "C" + (@i + 1), "Challenges")
            </td>
            <td>
                @ViewBag.ChallengeTitles[i]
            </td>
            
            </tr>
}
    </tbody>
</table>